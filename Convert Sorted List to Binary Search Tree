/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
/**
 * Definition for binary tree
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    TreeNode *sortedListToBST(ListNode *head) {
        if(!head)
           return NULL;
        ListNode *cur = head;
        int len = 0;
        while(cur){
           ++len;
           cur = cur->next;
        }
        int mid = len/2;
        ListNode *pred = NULL;
        cur = head;
        while(mid>0){
           pred = cur;
           cur = cur->next;
           --mid;
        }
        if(pred)
           pred->next = NULL;
        TreeNode *curTreeNode = new TreeNode(cur->val);
        if(len>1){
           curTreeNode->left = sortedListToBST(head);
           curTreeNode->right = sortedListToBST(cur->next);
        }
        return curTreeNode;
    }
    
};
